<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginFormController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <AnchorPane prefHeight="175.0" prefWidth="505.0">
            <children>
                <Label fx:id="titleLabel" layoutX="14.0" layoutY="14.0" text="User Login">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="userLabel" layoutX="46.0" layoutY="62.0" text="Username:" />
                <Label fx:id="passLabel" layoutX="48.0" layoutY="98.0" text="Password:" />
                <TextField fx:id="userField" layoutX="120.0" layoutY="58.0" prefHeight="25.0" prefWidth="371.0" promptText="Username" />
                <PasswordField fx:id="passField" layoutX="120.0" layoutY="94.0" prefHeight="25.0" prefWidth="371.0" promptText="Password" />
                <Button fx:id="loginButton" layoutX="445.0" layoutY="139.0" mnemonicParsing="false" onAction="#onActionLogin" text="Login" />
                <Label fx:id="locationLabel" layoutX="14.0" layoutY="151.0" text="Location" />
                <Button fx:id="exitButton" layoutX="398.0" layoutY="139.0" mnemonicParsing="false" onAction="#onActionExit" text="Exit" />
            </children>
        </AnchorPane>
    </children>
</GridPane>
