                <Label layoutX="33.0" layoutY="92.0" text="Customer Name:" />
                <TextField fx:id="nameField" layoutX="139.0" layoutY="88.0" prefHeight="25.0" prefWidth="271.0" />
                <Label layoutX="55.0" layoutY="131.0" text="Address:" />
                <TextField fx:id="addressField" layoutX="139.0" layoutY="127.0" prefHeight="25.0" prefWidth="271.0" />
                <Label layoutX="55.0" layoutY="165.0" text="Country:" />
