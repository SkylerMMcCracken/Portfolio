                <Button layoutX="378.0" layoutY="307.0" mnemonicParsing="false" onAction="#onActionExit" text="Exit" />
                <Button layoutX="275.0" layoutY="307.0" mnemonicParsing="false" onAction="#onActionSaveCustomer" text="Save Customer" />

            </children>
        </AnchorPane>
    </children>
</GridPane>
